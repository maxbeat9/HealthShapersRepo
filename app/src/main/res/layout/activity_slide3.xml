<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Slide3Activity">

    <ImageView
        android:id="@+id/slide1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/slide3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-200dp"
        />
    <TextView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Giving is not just about making a donation, it is about making a difference."
        android:id="@+id/Slide1text"
        android:layout_below="@id/slide1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-medium"
        />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonSlide3"
        android:src="@drawable/baseline_arrow_forward_24"
        android:background="@drawable/roundbutton"
        android:layout_below="@+id/slide1"
        android:layout_marginTop="100dp"

        />
</RelativeLayout>